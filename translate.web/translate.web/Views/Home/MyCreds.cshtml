@model ChangePasswordViewModel
@inject translate.web.Resources.LocService SharedLocalizer
<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link" asp-controller="Home" asp-action="MyProfile">@SharedLocalizer.GetLocalizedHtmlString("personalInfoCaption")</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" asp-controller="Home" asp-action="MyCreds">@SharedLocalizer.GetLocalizedHtmlString("passwordCaption")</a>
    </li>
</ul>

<div class="row">
    <div class="col-6">
        <form asp-controller="Home" asp-action="MyCreds" method="post">
            <div class="form-group">
                <label asp-for="CurrentPassword" class="control-label"></label>
                <input asp-for="CurrentPassword" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RepeatPassword" class="control-label"></label>
                <input asp-for="RepeatPassword" class="form-control" />
                <span asp-validation-for="RepeatPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">@SharedLocalizer.GetLocalizedHtmlString("updateButton")</button>
        </form>
    </div>
    <div class="col-6">
        <p class="h3">@SharedLocalizer.GetLocalizedHtmlString("passwordInfo")</p>
    </div>
</div>


