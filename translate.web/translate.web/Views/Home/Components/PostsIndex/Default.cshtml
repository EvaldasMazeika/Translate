@model IEnumerable<Post>

<h4>Pranešimai <span class="badge badge-secondary">@Model.Count()</span></h4>
<hr />
@if (Model.Any())
{
    <div class="table table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Create date</th>
                    <th scope="col">Author</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th><a asp-action="Post" asp-controller="Home" asp-route-id="@item.Id">@item.Title</a>@if (item.IsImportant) { <span class="badge badge-danger">Svarbu</span> }</th>
                        <td>@item.CreatedTime</td>
                        <td>@item.Employee.Name @item.Employee.Surname</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}