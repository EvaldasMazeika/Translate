@model IEnumerable<ProjectMember>

<h4>Projektai <span class="badge badge-secondary">@Model.Count()</span></h4>
<hr />
@if (Model.Any())
{
    <table class="table table-hover">
        <thead>
            <tr class="table-warning">
                <th scope="col">Title</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-warning">
                    <td><a asp-action="Project" asp-route-id="@item.Project.Id">@item.Project.Name</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h4 class="text-info">Jus neturite projetu</h4>
}