@model NewProjectViewModel
<a class="btn btn-primary" asp-controller="Home" asp-action="Projects"> < Grįžti atgal</a>
<hr />
<h2>Naujo vertimo sukūrimas:</h2>
    <form asp-action="NewProject">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <input type="submit" value="Sukurti" class="btn btn-primary" />
    </form>