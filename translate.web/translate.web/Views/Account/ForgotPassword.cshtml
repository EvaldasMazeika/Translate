@model PasswordRecoveryViewModel
@{
    Layout = "~/Views/Shared/_Account.cshtml";
}

@inject translate.web.Resources.LocService SharedLocalizer

<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-4">@SharedLocalizer.GetLocalizedHtmlString("recoveryTitle")</div>
                    <div class="col-8">@await Html.PartialAsync("_SelectLanguagePartial")</div>
                </div>
            </div>
            <div class="card-body">
                @if (TempData["message"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
                        @SharedLocalizer.GetLocalizedHtmlString("checkEmail")
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
                <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <h4>@SharedLocalizer.GetLocalizedHtmlString("enterEmail")</h4>
                <form asp-controller="Account" asp-action="ForgotPassword" method="post">
                    <div class="form-group">
                        <input type="email" class="form-control" asp-for="Email" required>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-success" style="float:right">@SharedLocalizer.GetLocalizedHtmlString("sendButton")</button>
                </form>
            </div>
        </div>

    </div>
</div>
