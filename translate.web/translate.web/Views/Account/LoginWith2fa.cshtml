@model VerifyCodeViewModel

@{
    Layout = "~/Views/Shared/_Account.cshtml";
}

@inject translate.web.Resources.LocService SharedLocalizer

<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-12"><h2>@SharedLocalizer.GetLocalizedHtmlString("Enter2faCodeTitle")</h2></div>
                </div>
            </div>
            <div class="card-body">
                <form asp-controller="Account" asp-action="LoginWith2fa" asp-route-returnurl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input asp-for="Provider" type="hidden" />
                    <input asp-for="RememberMe" type="hidden" />
                    <h4>@ViewData["Status"]</h4>
                    <div class="form-group">
                        <label asp-for="Code" class="control-label"></label>
                        <input asp-for="Code" class="form-control" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <input asp-for="RememberBrowser" />
                            <label asp-for="RememberBrowser"></label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">@SharedLocalizer.GetLocalizedHtmlString("loginCaption")</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

