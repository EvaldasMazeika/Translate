@model IEnumerable<TranslationDictionary>

<a class="btn btn-primary" asp-controller="Project" asp-action="Index"> < Grįžti atgal</a>
<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#DeclineModal" data-whatever="@Model.First().TranslationId">Atmesti</button>
<form asp-controller="Project" asp-action="VerifyTranslation" method="post" style="display:initial">
    <input type="hidden" name="transId" value="@Model.First().TranslationId" />
    <button type="submit" class="btn btn-success">Patvirtinti</button>
</form>

<hr />

<div class="table table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Duotas</th>
                <th scope="col">Vertimas</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.GivenValue</td>
                    <td>@item.NewValue</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="modal fade" id="DeclineModal" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ModalLabel">Atmesti vertimą</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Parašykite priežastį.</p>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">With textarea</span>
                    </div>
                    <textarea id="message" class="form-control" aria-label="With textarea"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Atšaukti</button>
                <button id="DeclineTranslation" type="button" class="btn btn-primary">Tęsti</button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        jQuery('#DeclineModal').on('show.bs.modal', function (event) {
            var button = jQuery(event.relatedTarget);
            var translationId = button.data('whatever');

            var modal = jQuery(this);
            modal.find('#DeclineTranslation').data('translationId', translationId);
        });

        jQuery("#DeclineTranslation").click(function (e) {
            e.preventDefault();
            var button = jQuery('#DeclineTranslation');
            var translationId = button.data('translationId');
            var message = jQuery("#message").val();

            jQuery.ajax({
                type: 'post',
                url: "/Project/@ViewBag.projectid/DeclineTranslation",
                data: JSON.stringify({
                    Id: translationId,
                    Message: message
                }),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (result) {
                    location.reload();
                },
                error: function (result) { }
            });

        });
    </script>
}