@model IEnumerable<TranslationDictionary>

<a class="btn btn-info" asp-controller="Project" asp-action="Index"><i class="fa fa-angle-double-left"></i> Grįžti atgal</a>
<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#DeclineModal" data-whatever="@Model.First().TranslationId">Atmesti</button>
<button type="button" class="btn btn-success" data-toggle="modal" data-target="#VerifyModal" data-whatever="@Model.First().TranslationId">Patvirtinti</button>

<hr />

<div class="table table-responsive">
    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Duotas</th>
                <th scope="col">Vertimas</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Duotas</th>
                <th scope="col">Vertimas</th>
            </tr>
        </tfoot>
    </table>
</div>
<div class="modal fade" id="DeclineModal" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ModalLabel">Atmesti vertimą</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Parašykite priežastį.</p>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">With textarea</span>
                    </div>
                    <textarea id="message" class="form-control" aria-label="With textarea"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Atšaukti</button>
                <button id="DeclineTranslation" type="button" class="btn btn-primary">Tęsti</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="VerifyModal" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ModalLabel">Patvirtinti vertimą</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Nurodykite dokumento būsimą pavadinimą.</p>
                <div class="input-group mb-3">
                    <input id="docName" type="text" class="form-control">
                    <div class="input-group-append">
                        <span class="input-group-text" id="basic-addon2">@ViewBag.docType</span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Atšaukti</button>
                <button id="VerifyTranslation" type="button" class="btn btn-primary">Tęsti</button>
            </div>
        </div>
    </div>
</div>


@section scripts {
    <script>
        jQuery('#example').DataTable({
            "ajax": {
                "url": "/Project/@ViewBag.projectid/GetTranslationsAjax?tranId=@Model.First().TranslationId",
                "dataSrc": ""
            },
            "columns": [
                { "data": "name" },
                { "data": "givenValue" },
                { "data": "newValue" }
            ]
        });



        jQuery('#DeclineModal').on('show.bs.modal', function (event) {
            var button = jQuery(event.relatedTarget);
            var translationId = button.data('whatever');

            var modal = jQuery(this);
            modal.find('#DeclineTranslation').data('translationId', translationId);
        });

        jQuery("#DeclineTranslation").click(function (e) {
            e.preventDefault();
            var button = jQuery('#DeclineTranslation');
            var translationId = button.data('translationId');
            var message = jQuery("#message").val();

            jQuery.ajax({
                type: 'post',
                url: "/Project/@ViewBag.projectid/DeclineTranslation",
                data: JSON.stringify({
                    Id: translationId,
                    Message: message
                }),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (result) {
                    location.reload();
                },
                error: function (result) { }
            });

        });


        jQuery('#VerifyModal').on('show.bs.modal', function (event) {
            var button = jQuery(event.relatedTarget);
            var translationId = button.data('whatever');

            var modal = jQuery(this);
            modal.find('#VerifyTranslation').data('translationId', translationId);
        });

        jQuery("#VerifyTranslation").click(function (e) {
            e.preventDefault();
            var button = jQuery('#VerifyTranslation');
            var translationId = button.data('translationId');
            var name = jQuery("#docName").val();

            jQuery.ajax({
                type: 'post',
                url: "/Project/@ViewBag.projectid/VerifyTranslation",
                data: JSON.stringify({
                    Id: translationId,
                    Name: name
                }),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (result) {
                    location.reload();
                },
                error: function (result) { }
            });

        });

    </script>
}