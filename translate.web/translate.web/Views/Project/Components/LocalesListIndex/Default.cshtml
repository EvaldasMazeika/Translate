@model IEnumerable<Translation>

@inject translate.web.Data.ApplContext context



@if (!Model.Any())
{
    <h2 class="text-warning text-center">Pridėkite pirmąjį vertimą</h2>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr class="d-flex">
                    <th class="col" scope="col">Vertimai</th>
                    <th class="col" scope="col"></th>
                    <th class="col" scope="col"></th>
                    <th class="col" scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="d-flex">
                        @if (item.TranslatorId.ToString() == ViewBag.userId && item.IsWaiting == false && item.IsCompleted == false)
                        {
                            <td class="col-2"><a asp-controller="Project" asp-action="Editor" asp-route-id="@item.Id">@item.Title</a></td>

                        }
                        else
                        {
                            <td class="col-2">@item.Title</td>
                        }
                        <td class="col-sm-4">
                            <div class="progress">
                                @{
                                    double all = item.TranslationDictionarys.Count() != 0 ? item.TranslationDictionarys.Count() : 1;
                                    double proc = item.TranslationDictionarys.Where(x => x.NewValue != null).Count();
                                }
                                <div class="progress-bar bg-success" role="progressbar" style="width: @Math.Round(((proc/all)*100))%" aria-valuenow="@Math.Round(((proc/all)*100))" aria-valuemin="0" aria-valuemax="100">@Math.Round(((proc / all) * 100))%</div>
                            </div>
                        </td>
                        <td class="col-sm-4">
                            paskirtas: <strong>@item.Translator.Name @item.Translator.Surname</strong> @item.Document.Language.Name >  @item.Language.Name
                        </td>
                        <td class="col-sm-2">
                            <div class="btn-group btn-group-sm" style="float:right" role="group" aria-label="Basic example">
                                @if (item.IsCompleted == true)
                                {
                                    <a asp-controller="Project" asp-action="DownloadTranslation" asp-route-id="@item.Id" class="btn btn-dark">Parsisiųsti</a>
                                }

                                @if (ViewBag.creator)
                                {
                                    if (item.IsWaiting == true)
                                    {
                                        <a asp-controller="Project" asp-action="CheckTranslation" asp-route-id="@item.Id" class="btn btn-dark">Patikrinti</a>

                                    }
                                    <button type="button" data-toggle="modal" data-translate="@item.Id" data-project="@item.Document.ProjectId" data-name="@item.Title" data-target="#DeleteTranslationsModal" class="btn btn-danger btn-sm" style="float:right">Ištrinti</button>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


}

@if (ViewBag.creator)
{
    <div class="modal fade" id="DeleteTranslationsModal" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="ModalLabel">Pašalinimas</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Ne</button>
                    <button id="deleteTranslation" type="button" class="btn btn-primary">Taip</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        window.onload = function () {
            jQuery('#DeleteTranslationsModal').on('show.bs.modal', function (event) {
                var button = jQuery(event.relatedTarget);
                var translationId = button.data('translate');
                var name = button.data('name');
                var project = button.data('project');

                var modal = jQuery(this);
                modal.find('.modal-body').text('Ar tikrai norite pašalinti ' + name + ' iš projekto?');
                modal.find('#deleteTranslation').data("translationId", translationId);
                modal.find('#deleteTranslation').data("project", project);
            });

            jQuery("#deleteTranslation").click(function (e) {
                e.preventDefault();
                var button = jQuery('#deleteTranslation');
                var translationId = button.data('translationId');
                var projectId = button.data("project");


                jQuery.ajax({
                    type: 'post',
                    url: '/Project/' + projectId + '/DeleteTranslation',
                    data: JSON.stringify({
                        Id: translationId
                    }),
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (result) {
                        location.reload();
                    },
                    error: function (result) { }
                });

            });


        };
    </script>

}