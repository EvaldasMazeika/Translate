@model IEnumerable<Translation>

@inject translate.web.Data.ApplContext context



@if (!Model.Any())
{
    <h2 class="text-warning text-center">Pridėkite vertimą</h2>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr class="d-flex">
                    <th class="col" scope="col">Vertimai</th>
                    <th class="col" scope="col">
                        <div id="filterButton" class="btn-group">
                            <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Vertimų filtras
                            </button>
                            <div class="dropdown-menu">

                                @if (ViewBag.showAll == false)
                                {
                                    <button id="mineFilter" class="dropdown-item">Mano vertimai</button>
                                    <button id="allFilter" class="dropdown-item active">Visi vertimai</button>
                                }
                                else
                                {
                                    <button id="mineFilter" class="dropdown-item active">Mano vertimai</button>
                                    <button id="allFilter" class="dropdown-item">Visi vertimai</button>
                                }

                            </div>
                        </div>
                    </th>
                    <th class="col" scope="col"></th>
                    <th class="col" scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="d-flex">
                        @if (item.TranslatorId.ToString() == ViewBag.userId && item.IsWaiting == false && item.IsCompleted == false)
                        {
                            <td class="col-2"><a asp-controller="Project" asp-action="Editor" asp-route-id="@item.Id">@item.Title</a></td>

                        }
                        else if (item.IsCompleted == true)
                        {
                            <td class="col-2"><a asp-controller="Project" asp-action="ReviewTranslation" asp-route-id="@item.Id">@item.Title</a></td>
                        }
                        else
                        {
                            <td class="col-2">@item.Title</td>
                        }
                        <td class="col-sm-4">
                            <div class="progress">
                                @{
                                    double all = item.TranslationDictionarys.Count() != 0 ? item.TranslationDictionarys.Count() : 1;
                                    double proc = item.TranslationDictionarys.Where(x => x.NewValue != null).Count();
                                }
                                <div class="progress-bar bg-success" role="progressbar" style="width: @Math.Round(((proc/all)*100))%" aria-valuenow="@Math.Round(((proc/all)*100))" aria-valuemin="0" aria-valuemax="100">@Math.Round(((proc / all) * 100))%</div>
                            </div>
                        </td>
                        <td class="col-sm-4">
                            paskirtas: <strong>@item.Translator.Name @item.Translator.Surname</strong> @item.Document.Language.Name >  @item.Language.Name
                        </td>
                        <td class="col-sm-2">
                            <div class="btn-group btn-group-sm d-flex flex-wrap" style="float:right" role="group">
                                @if (item.IsCompleted == true)
                                {
                                    <a asp-controller="Project" asp-action="DownloadTranslation" asp-route-id="@item.Id" class="btn btn-dark">Parsisiųsti</a>
                                }

                                @if (ViewBag.creator)
                                {
                                    if (item.IsWaiting == true)
                                    {
                                        <a asp-controller="Project" asp-action="CheckTranslation" asp-route-id="@item.Id" class="btn btn-info">Patikrinti</a>

                                    }
                                    <button type="button" id="deleteButton" data-toggle="modal" data-translate="@item.Id" data-project="@item.Document.ProjectId" data-name="@item.Title" data-target="#DeleteTranslationsModal" class="btn btn-danger btn-sm" style="float:right">Ištrinti</button>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


}

@if (ViewBag.creator)
{
    <div class="modal fade" id="DeleteTranslationsModal" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="ModalLabel">Pašalinimas</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Tikrai norite pašalinti vertimą iš sistemos?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Ne</button>
                    <button id="deleteTranslation" type="button" class="btn btn-primary">Taip</button>
                </div>
            </div>
        </div>
    </div>
}